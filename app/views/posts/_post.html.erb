<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Caption:</strong>
    <%= post.caption %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= post.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= post.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Video:</strong>
    <%= link_to post.video.filename, post.video, class: "text-gray-700 underline hover:no-underline" if post.video.attached? %>
  </div>
</div>
